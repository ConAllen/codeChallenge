<%# jumbotron below %>
<div class="jumbotron">
  <h2 class="display-3"><B>Welcome to You Shop</B></h2>
  <h4>Welcome to YouShop Irelands leading online store</h4>
  <hr class="my-2">
  <div class="container">
  <h3>Please subscribe with your email below to win daily prizes</h3>
  <form>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email">
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
</div>
<%# here i have set up a loop so that the added products will fall into a bootstrap grid%>
<div class="row">
<% @products.each do |product| %>
  <div class="col-md-3">
  <div class="thumbnail">
      <%= image_tag product.image.url %><br>
        <div class="caption">
          <h3><%= product.name %><br></h3>
          <p><%= product.price %><br></p>

              <%= link_to 'Show', product, class: "btn btn-link" %><br>
              <%= link_to 'Edit', edit_product_path(product),class: "btn btn-link" %><br>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link" %>
                <p><a href="#" class="btn btn-primary" role="button">Button</a>
      </div>



  <%= product.description %><br>


</div>
  </div>
<%# ends the loop %>
<% end %>
</div>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-link"%>
