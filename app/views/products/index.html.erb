<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h2 class="display-3"><B>Welcome to You Shop</B></h2>
  <h4>Welcome to YouShop Irelands leading online store</h4>
  <hr class="my-2">
  <div class="container">
  <h3>Please subscribe with your email below to win daily prizes</h3>
  <form>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email">
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
</div>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:medium) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
